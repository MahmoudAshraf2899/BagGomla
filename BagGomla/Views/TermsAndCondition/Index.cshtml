@model IdentityLibrary.DataModel.FWYAbout
@{
    ViewBag.Title = "الشروط والاحكام";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center mb-30">الشروط و الاحكام</h1>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@using (Html.BeginForm("Index", "TermsAndCondition", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(c => c.ID)
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="form-group">
                <label for="TermsAnConditionsEn" style="text-align:right !important;width:100%;">انجليزي</label>
                @Html.TextAreaFor(x => x.TermsAnConditionsEn, htmlAttributes: new { @class = "form-control valid", rows = 20 })
            </div>
            <div class="form-group">
                <label for="TermsAnConditionsAr" style="text-align:right !important;width:100%;">عربي</label>
                @Html.TextAreaFor(x => x.TermsAnConditionsAr, htmlAttributes: new { @class = "form-control valid", rows = 20 })
            </div>
            <div class="form-group row">
                <div class="col-md-2 mx-auto">
                    <button style="text-align:right !important" type="submit" class="btn btn-success">تعديل</button>
                </div>
            </div>
        </div>
    </div>
    
}
<script src="~/Content/tinymce/tinymce.js"></script>
<script>
    tinymce.init({
        selector: "textarea"
    });
</script>