@using IdentityLibrary.DataModel
@model FWYSupplierCooperation
@using BagGomla.Models;
@using System.Web.UI.WebControls
@using IdentityLibrary.DataModel;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Supplier Corporation Profile";
    if (User.Identity.IsAuthenticated)
    {
        DatabaseContext db = new DatabaseContext();
        var userId = User.Identity.GetUserId();
        var user = db.AspNetUsers.SingleOrDefault(c => c.Id == userId);
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_DefualtLayout.cshtml";
    }
}

<!-- ======================== Profile ========================== -->
<!-- ======================== Profile Cover ========================== -->
@if (ViewBag.ProfilePicture != "" && ViewBag.ProfilePicture != null)
{
    <div class="profile-cover border-bottom">
        <img src="@ViewBag.ProfilePicture" height="400" width="100%" alt="">
    </div>
}

<section class="mx-auto">


    <div class="container">
        <div class="row no-gutters">

            <div class="col-md-12">


                <!-- ========================Contact========================== -->




                <div class="card mt-4">
                    <div class="card-header">
                        Contact information
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-7">
                                <div class="row">

                                    <div class="col-md-6">
                                        <p>Contact Person:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.AspNetUsers.Name</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p>Company Name:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.Name</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p>Street Address:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.Address</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p>City:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.City</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p>Province/State:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.State</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p>Country:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.Country</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p>Phone:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.Phone</p>
                                    </div>

                                    <div class="col-md-6">
                                        <p>Website URL:</p>

                                    </div>
                                    <div class="col-md-6">
                                        <p>@Model.WebsiteUrl</p>
                                    </div>

                                </div>

                            </div>
                            <div class="col-md-5">
                                <div class="mapouter">
                                    <div class="gmap_canvas"><iframe width="100%" height="250" id="gmap_canvas" src="https://maps.google.com/maps?q=university%20of%20san%20francisco&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com/nordvpn-coupon/">nordvpn best deal</a></div>
                                    <style>
                                        .mapouter {
                                            position: relative;
                                            text-align: right;
                                            height: 250px;
                                            width: 100%;
                                        }

                                        .gmap_canvas {
                                            overflow: hidden;
                                            background: none !important;
                                            height: 250px;
                                            width: 100%;
                                        }
                                    </style>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

                <!-- ========================Contact End========================== -->







            </div>


            <div class="col-md-3">


                <div class="card mt-4">
                    <div class="card-header">
                        Social Networks
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled d-flex">
                            <li class="mx-2"><a href="@Model.Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li class="mx-2"><a href="@Model.Instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                            <li class="mx-2"><a href="@Model.Linkedin"><i class="fa fa-telegram" aria-hidden="true"></i></a></li>
                        </ul>

                    </div>
                </div>

            </div>

            <div class="col-md-9 pl-17">


                <!-- ======================== Send Message ========================== -->

                <div class="card mt-4">
                    <div class="card-header">
                        Send Message
                    </div>
                    <div class="card-body">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form action="">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label>From</label>
                                    </div>
                                    <div class="col-md-8 mb-3">
                                        <p>Username</p>
                                    </div>
                                    <div class="col-md-2 d-none d-md-block"></div>
                                    <div class="col-md-2">
                                        <label>To</label>
                                    </div>
                                    <div class="col-md-8 mb-3">
                                        <p>Company Name</p>
                                    </div>
                                    <div class="col-md-2 d-none d-md-block"></div>
                                    <div class="col-md-2">
                                        <label>Subject*</label>
                                    </div>
                                    <div class="col-md-8 mb-3">

                                        <input type="text"
                                               class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                                        <small id="helpId" class="d-none form-text text-muted">Help text</small>

                                    </div>
                                    <div class="col-md-2 d-none d-md-block"></div>
                                    <div class="col-md-2">
                                        <label>Message*</label>
                                    </div>
                                    <div class="col-md-8 mb-3">

                                        <div class="form-group">

                                            <textarea class="form-control" name="" id="" rows="4"></textarea>
                                        </div>
                                        <small id="helpId" class="d-none form-text text-muted">Help text</small>

                                        <button type="submit" class="btn btn-primary">Send Message </button>

                                        <p class="pt-4">
                                            Your contact information will be shared with the recipient of this message.
                                        </p>

                                        <p><a href="#">Click here to make sure your information is correct</a></p>

                                        <p><span class="text-warning">Warning:</span>  False inquiries, solicitations or spam messages will result in cancellation of your membership.</p>

                                    </div>
                                    <div class="col-md-2 d-none d-md-block"></div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="need-be-user">
                                <p>You must be signed in to contact this supplier.</p>
                                <p><strong>Not a member? </strong><a href="/Account/Register?returnUrl=/SupplierCorporation/CompanyContact/@Model.ID"> Join Now FREE</a></p>
                                <p>Already a member? <a href="/Account/Login?returnUrl=/SupplierCorporation/CompanyContact/@Model.ID">Sign In</a></p>
                            </div>
                        }


                    </div>
                </div>

                <!-- ======================== Send Message  End========================== -->


            </div>
        </div>
    </div>



</section>

<!-- ======================== Profile  End========================== -->